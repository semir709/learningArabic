<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="/css/navbar.css">
    <title>Hello, world!</title>
  </head>
  <body>

    <%-include('partials/navbar.ejs')%>

      <div class="container">
          <div class="row">
              <div class="col-2"></div>
              <div class="col-8">
                <div id="msg"></div>
                <div class="row mt-5">
                    <div class="col-12">
                        <label for="category">Category</label>
                        <div class="input-group my-1  ss_input_holder">
                            <input type="text" id="category" class="form-control p-0 border-0 ss_input" >
            
                            <button class="btn  dropdown-toggle p-0 me-3 ss_btn_down_arrow" type="button" data-bs-toggle="dropdown" aria-expanded="false"></button>
                            <ul class="dropdown-menu ">
                              <% all_category.forEach(d => { %>
                                <li><a class="dropdown-item" onclick="selectVal_category(event)"><%= d._name%></a></li>
                              <% }) %>
                            </ul>
            
                          </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-12">
                        <label for="image_word">Arabic word</label>
                        <div class="ss_img_holder d-flex justify-content-between" id="img_holder">
                            <img src="/img/test.psng" title="test.png" id="image_word"></img>
                            <form id="form_img" action="" method="post" enctype="multipart/form-data">
                              <input name="img"  id="upload" class="ss_dialog_box" type="file"  onchange="onFileSelected(event)"  accept="image/*" >
                            </form>
                            <i class="fas fa-image"></i>
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-md-3 mb-3">
                        <label for="grammar">Grammar</label>
                        <div class="input-group my-1  ss_input_holder">
                            <input type="text" id="grammar" class="form-control p-0 border-0 ss_input">
            
                            <button class="btn  dropdown-toggle p-0 me-3 ss_btn_down_arrow" type="button" data-bs-toggle="dropdown" aria-expanded="false"></button>
                            <ul class="dropdown-menu ">
                              <% all_grammar.forEach(d => { %>
                                <li><a class="dropdown-item" onclick="selectVal_grammar(event)" ><%= d.grammar%></a></li>
                              <% }) %>
                            </ul>
            
                          </div>
                    </div>

                    <div class="col-md-9">
                        <label for="grammar_meaning">Grammar meaning</label>
                        <div class="input-group my-1  ss_input_holder">
                            <input type="text" id="grammar_meaning" class="form-control p-0 border-0 ss_input" >
                          </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-12">
                        <label for="bos_lang">Bosnian language</label>
                        <div class="input-group my-1  ss_input_holder">
                            <input type="text" id="bos_lang" class="form-control p-0 border-0 ss_input" >
                          </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-12">
                        <label for="eng_lang">English language</label>
                        <div class="input-group my-1  ss_input_holder">
                            <input type="text" id="eng_lang" class="form-control p-0 border-0 ss_input">
                          </div>
                    </div>
                </div>

                <div class="row mt-4 mb-5">
                    <div class="col-12">
                        <div class="row align-items-end">
                          <div class="col-md-2 order-md-last ss_page">
                            <label for="page">Page</label>
                            <div class="input-group my-1  ss_input_holder mb-0">
                                <input type="text" id="page" class="form-control p-0 border-0 ss_input" >
                            </div>
                        </div>
                            <div class="col-md-2">
                                <button class="btn ss_btn ss_btn_update" id="btn_save">Save</button>
                            </div>
                            <div class="col-md-2">
                                <button class="btn ss_btn ss_btn_del" id="btn_clear">Clear</button>
                            </div>
                            <div class="col-md-6 "></div>
                        </div>
                    </div>
                </div>

              </div>
              <div class="col-2"></div>
          </div>
      </div>

      <script src="/js/jquery/jquery.js"></script>
      <script src="/js/admin.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>